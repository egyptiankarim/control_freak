<%- view_title "Families | #{@family.acronym} - #{@family.title}" %>

<% content_for :main do %>
<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header"><%= @family.acronym.upcase %> - <%= @family.title %></h1>
    <p class="lead"></p>
  </div>
  <div class="col-xs-12 table-responsive">
    <h2>Inventory</h2>
    <table class="table table-sm table-hover control-table">
      <thead>
        <tr>
          <th scope="col" style="width: 10%">Number</th>
          <th scope="col" style="width: 50%">Title</th>
          <th scope="col">Parameters</th>
          <th scope="col">References</th>
          <th scope="col">Related controls</th>
        </tr>
      </thead>
      <tbody>
        <% @controls.each do |control| %>
        <%= control_row(control) %>
        <% end %>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>
</div>
<% end %>
